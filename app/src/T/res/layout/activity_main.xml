<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E8EDEF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/menus_title"
                android:textColor="#000000"
                android:textSize="27sp" />

            <Button
                android:id="@+id/main_btn_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text="@string/menus_more"
                android:textSize="21sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7.5dp"
                android:src="@drawable/drink" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="@string/goods_juice"
                android:textColor="#000000"
                android:textSize="16.5sp" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:columnWidth="15dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"></GridView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.5dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7.5dp"
                android:src="@drawable/fruit" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="@string/goods_fruit"
                android:textColor="#000000"
                android:textSize="16.5sp" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_fruits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:columnWidth="15dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"></GridView>

    </LinearLayout>

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#CFD3D4" />


    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lly_shopcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="#F1F5F6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:alpha="0.7"
                    android:gravity="center_vertical"
                    android:text="@string/shop_car"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/main_btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/shop_car_clear"
                    android:textColor="#000000"
                    android:textSize="21sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="#E9EBEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F1F5F6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="24dp"
                    android:text="@string/shop_car_code"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="24dp"
                    android:text="@string/shop_car_goods_name"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="24dp"
                    android:text="@string/shop_car_unit_money"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="#E9EBEC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <ListView
                    android:id="@+id/lv_menus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:listSelector="@null"></ListView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="#E9EBEC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/shop_car_totle2"
                    android:textColor="#212121"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/main_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:text="Â¥0.00"
                    android:textColor="#FC5436"
                    android:textSize="27sp" />


            </RelativeLayout>

            <Button
                android:id="@+id/main_btn_pay"
                android:layout_width="match_parent"
                android:layout_height="67.5dp"
                android:background="#FC5436"
                android:gravity="center"
                android:text="@string/shop_car_go_pay"
                android:textColor="#FFFFFF"
                android:textSize="21sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rtl_empty_shopcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_empty_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/emptyshopcar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_empty_shopcar"
                android:layout_marginTop="18dp"
                android:alpha="0.7"
                android:gravity="center"
                android:text="@string/shop_car_nothing"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
